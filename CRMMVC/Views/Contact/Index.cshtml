@model IEnumerable<CRMModels.Read.ReadContact>

@{
    ViewBag.Title = "My Contacts";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create Contact", "ContactCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PreferredName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CellPhone)
        </th>
        <th>Options</th>
    </tr>

@foreach (var item in Model) {
    <tr>        
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PreferredName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CellPhone)
        </td>
        <td>
            @Html.ActionLink("Edit", "ContactEdit", new { id=item.ContactID }) |
            @Html.ActionLink("Delete", "ContactDelete", new { id = item.ContactID })
        </td>
    </tr>
}

</table>
