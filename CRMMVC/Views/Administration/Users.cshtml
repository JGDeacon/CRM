            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsLocked)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDateUTC)
        </td>
        <td>
            @Html.ActionLink("Edit", "UserEdit", new { id=item.UserID }) |
