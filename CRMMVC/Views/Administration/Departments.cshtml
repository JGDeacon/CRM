@model IEnumerable<CRMModels.Read.ReadDepartments>

@{
    ViewBag.Title = "Departments";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create Department", "DepartmentCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        
        <th>Options</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "DepartmentEdit", new {id=item.DepartmentID}) |           
            @Html.ActionLink("Delete", "DepartmentDelete", new { id = item.DepartmentID})
        </td>
    </tr>
}

</table>
